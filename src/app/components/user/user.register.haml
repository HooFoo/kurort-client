%form.user-form{ 'ng-submit': 'registerCtrl.submit()', novalidate: true }
  .input-field
    %label{ for: 'username' }
      Username
    %input.user-form-input{ name: 'username', type: 'text', 'ng-model': 'registerCtrl.user.username' }
  .input-field
    %label{ for: 'email' }
      Email
    %input.user-form-input{ name: 'email', type: 'text', 'ng-model': 'registerCtrl.user.email' }
  .input-field
    %label{ for: 'password' }
      Password
    %input.user-form-input{ name: 'password', type: 'password', 'ng-model': 'registerCtrl.user.password' }
  .input-field
    %label{ for: 'password_confirmation' }
      Password confirmation
    %input.user-form-input{ name: 'password_confirmation', type: 'password', 'ng-model': 'registerCtrl.user.password_confirmation' }
  %input.btn{ type: 'submit', value: 'Login' }
